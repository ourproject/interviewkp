<h1>Listing answers</h1>

<table>
  <thead>
    <tr>
      <th>Test</th>
      <th>User</th>
      <th>Question</th>
      <th>Selected answer</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @answers.each do |answer| %>
      <tr>
        <td><%= answer.test_id %></td>
        <td><%= answer.user_id %></td>
        <td><%= answer.question_id %></td>
        <td><%= answer.selected_answer %></td>
        <td><%= button_to 'Show', answer, method: :get, :class => 'button', :id => 'button' %></td>
        <td><%= button_to 'Edit', edit_answer_path(answer), method: :get, :class => 'button', :id => 'button' %></td>
        <td><%= button_to 'Destroy', answer, method: :delete, :class => 'button', :id => 'button', data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Answer', new_answer_path %>
